<md-toolbar class="md-medium-tall">
    <md-toolbar-tools layout="row" layout-padding layout-align="left center">
        <h4 md-truncate>
            <i class="material-icons md-flex-align-icon md-avatar-icon">lock</i>
            <span>Account Creation</span>
        </h4>
    </md-toolbar-tools>
</md-toolbar>
<md-content md-whiteframe="2">
    <md-content>
        <form name="registerAuth" ng-submit="authRegister()" layout="column" layout-align="center center">
            <md-input-container flex="50">
                <label>Full Name</label>
                <input required name="name" ng-model="auth.name" maxlength="150" value="Cristian Dumitrov">
                <div ng-messages="registerAuth.name.$error">
                    <div ng-message="required">A full name is required to register.</div>
                    <div ng-message="maxlength">Name cannot exceed 150 characters.</div>
                </div>
            </md-input-container>
            <md-input-container flex="50">
                <label>Username</label>
                <input required name="username" ng-model="auth.username" maxlength="32" minlength="6" value="cristiand">
                <div ng-messages="registerAuth.username.$error">
                    <div ng-message="required">A username is required to register.</div>
                    <div ng-message="maxlength">Username cannot exceed 32 characters.</div>
                    <div ng-message="minlength">Username cannot be shorter than 6 characters.</div>
                    <div ng-message="taken">The username you have picked is already taken.</div>
                </div>
            </md-input-container>
            <md-input-container flex="50">
                <label>Password</label>
                <input required type="password" name="password" ng-model="auth.password" minlength="6" value="hahaha">
                <div ng-messages="registerAuth.password.$error">
                    <div ng-message="required">A password is required to register.</div>
                    <div ng-message="minlength">Password cannot be shorter than 6 characters.</div>
                </div>
            </md-input-container>
            <md-button class="md-raised md-primary" ng-click="authRegister()">Register</md-button>
        </form>
    </md-content>
</md-content>